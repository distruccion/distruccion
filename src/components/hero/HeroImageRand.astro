---
import Button from "@components/navigation/Button.astro";
import ItemFilter from "@components/navigation/ItemFilter.astro";
import FormattedDate from "@components/FormattedDate.astro";
import RandImage from "@components/hero/RandImage.astro";

const {
  title,
  hero_buttons,
  intro,
  description,
  tag,
  filter,
  filters,
  filter_type,
  style,
  pubDate,
  base_url,
} = Astro.props;

const { slug } = Astro.params;
---

<div
  class={`hero relative overflow-hidden nebulix-parallax ${
    style.hero_surface || "surface-dark"
  } ${style.hero_class || ""}`}
  transition:name={`hero_${slug || Math.random()}`}
  id="header"
>
  <RandImage />

  <div
    class="absolute inset-0 z-10 grid place-items-center bg-dark bg-opacity-20"
  >
    <div class="container-xl py-8">
      <div class="max-w-3xl">
        {
          pubDate && (
            <span class="text-overline">
              <FormattedDate date={pubDate} />
            </span>
          )
        }
        <h1 class="title">
          {title}
        </h1>
        <div class="flex-col">
          {description && <div class="subtitle balance py2 font-light"> {description}</div>}
          {intro && <div class="subtitle balance py2 text-indigo-300 mt-8"> {intro}</div>}
        </div>

        {
          tag && (
            <ItemFilter
              filters={tag}
              className="mt-4 justify-start"
              links={true}
              {base_url}
            />
          )
        }

        {
          filters && (
            <ItemFilter
              filters={filters}
              className="mt-4"
              links={true}
              active={filter}
              type={filter_type}
              {base_url}
            />
          )
        }
        {
          hero_buttons && hero_buttons.length > 0 && (
            <div class="flex flex-wrap gap-4 py-8">
              {hero_buttons.map((btn) => (
                <Button {...btn} />
              ))}
            </div>
          )
        }
        <slot />
      </div>
    </div>
  </div>
</div>

<style>
  .hero {
    @screen sm {
      min-height: calc(100svh - 4rem);
    }
  }
  .media {
    @screen sm {
      max-height: calc(100svh - 4rem);
    }
  }
  @media only screen and (max-height: 350px) {
  .hero {
    min-height: 370px;
  }
  }

</style>
