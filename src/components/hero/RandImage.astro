  'imgGrid/grid39.webp',
  'imgGrid/grid40.webp',
  'imgGrid/grid41.webp',
    // Añade más imágenes según sea necesario
];

function getRandomImage() {
    const randomIndex = Math.floor(Math.random() * images.length);
    return images[randomIndex];
}

function getRandomInterval(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
}

function showRandomImage() {
    const imgElement = document.getElementById('item');
    const randomImage = getRandomImage();

    // Asegúrate de que 'item' tenga un contenido IMG
    if (!imgElement.querySelector('img')) {
        const img = document.createElement('img');
        imgElement.appendChild(img);
    }
        
    const img = imgElement.querySelector('img');

    // Eliminar la clase 'show' para la transición de salida
    img.classList.remove('show');

    // Usar un temporizador para darle tiempo a la transición de salida
    setTimeout(() => {
        // Establecer la nueva imagen solo después de que la actual se haya quitado
        img.src = randomImage;

        // Esperar a que la imagen se cargue completamente
        img.onload = () => {
            // Cuando la imagen esté cargada, añadir la clase 'show' para la transición de entrada
            img.classList.add('show');
        };

    }, 700);  // Dar tiempo para que termine la transición de salida

    // Cambiar imagen en un intervalo aleatorio entre 2 y 5 segundos
    const randomInterval = getRandomInterval(5500, 6000);
    setTimeout(showRandomImage, randomInterval);    
}

// Iniciar el proceso de mostrar imágenes aleatorias
document.addEventListener('DOMContentLoaded', showRandomImage);

</script>

